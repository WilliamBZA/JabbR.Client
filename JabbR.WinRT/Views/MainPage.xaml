<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JabbR.WinRT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:JabbR.WinRT.Controls"
    xmlns:valueConverters="using:JabbR.WinRT.Infrastructure.ValueConverters"
    x:Class="JabbR.WinRT.Views.MainPage"
    mc:Ignorable="d"
    DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Page.Resources>
        <valueConverters:EmptyOrNullVisibilityValueConverter x:Key="EmptyOrNullVisibilityValueConverter"/>
    </Page.Resources>
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Controls:JanrainLogonControl UserId="{Binding UserId, Mode=TwoWay}" Visibility="{Binding UserId, Converter={StaticResource EmptyOrNullVisibilityValueConverter}, ConverterParameter=Opposite}"/>
        <StackPanel Visibility="{Binding LoadingControlVisible}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/Logo.png" Stretch="None" />
            <TextBlock Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center" Margin="0,0,0,30">Powered by SignalR</TextBlock>
            <Controls:LoadingControl />
        </StackPanel>
    </Grid>
</Page>